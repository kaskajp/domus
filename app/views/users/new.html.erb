<% content_for :title, t('titles.sign_up') %>

<div class="auth-container">
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900"><%= t('auth.create_account') %></h1>
    <p class="text-gray-600 mt-2"><%= t('auth.get_started') %></p>
  </div>

  <%= form_with model: @user, url: signup_path, local: true, class: "space-y-4" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-4">
        <h3 class="text-sm font-medium text-red-800"><%= t('errors.fix_errors') %></h3>
        <ul class="mt-2 text-sm text-red-700">
          <% @user.errors.full_messages.each do |message| %>
            <li>â€¢ <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-4">
      <div class="form-group">
        <%= form.label :first_name, t('auth.first_name'), class: "form-label" %>
        <%= form.text_field :first_name, 
            required: true, 
            autofocus: true,
            placeholder: t('auth.first_name'),
            class: "form-input" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name, t('auth.last_name'), class: "form-label" %>
        <%= form.text_field :last_name, 
            required: true,
            placeholder: t('auth.last_name'),
            class: "form-input" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email, t('auth.email'), class: "form-label" %>
      <%= form.email_field :email, 
          required: true,
          placeholder: t('auth.email'),
          class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('auth.password'), class: "form-label" %>
      <%= form.password_field :password, 
          required: true,
          placeholder: t('auth.password'),
          class: "form-input" %>
      <p class="text-xs text-gray-500 mt-1"><%= t('users.password_length_help') %></p>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, t('auth.confirm_password'), class: "form-label" %>
      <%= form.password_field :password_confirmation, 
          required: true,
          placeholder: t('auth.confirm_password'),
          class: "form-input" %>
    </div>

    <div class="pt-4">
      <%= form.submit t('auth.create_account'), class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-6 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-600">
      <%= t('auth.already_have_account') %>
      <%= link_to t('auth.sign_in'), login_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </p>
  </div>
</div>
