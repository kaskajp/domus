<% content_for :title, "Sign In - Domus" %>

<div class="auth-container">
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Welcome back</h1>
    <p class="text-gray-600 mt-2">Sign in to your Domus account</p>
  </div>

  <%= form_with url: login_path, local: true, class: "space-y-4" do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, 
          required: true, 
          autofocus: true,
          placeholder: "Enter your email",
          class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, 
          required: true,
          placeholder: "Enter your password",
          class: "form-input" %>
    </div>

    <div class="pt-4">
      <%= form.submit "Sign In", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-6 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-600">
      Don't have an account? 
      <%= link_to "Sign up", signup_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </p>
  </div>
</div>

<style>
.text-2xl { font-size: 1.5rem; line-height: 2rem; }
.text-center { text-align: center; }
.mb-6 { margin-bottom: 1.5rem; }
.mt-2 { margin-top: 0.5rem; }
.mt-6 { margin-top: 1.5rem; }
.pt-4 { padding-top: 1rem; }
.pt-6 { padding-top: 1.5rem; }
.space-y-4 > * + * { margin-top: 1rem; }
.w-full { width: 100%; }
.border-t { border-top-width: 1px; }
.text-gray-600 { color: #4b5563; }
.text-blue-600 { color: #2563eb; }
.hover\:text-blue-800:hover { color: #1e40af; }
</style>
