<% content_for :title, t('titles.sign_in') %>

<div class="auth-container">
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900"><%= t('auth.welcome_back') %></h1>
    <p class="text-gray-600 mt-2"><%= t('auth.sign_in') %> to your <%= t('app.name') %> account</p>
  </div>

  <%= form_with url: login_path, local: true, class: "space-y-4" do |form| %>
    <div class="form-group">
      <%= form.label :email, t('auth.email'), class: "form-label" %>
      <%= form.email_field :email, 
          required: true, 
          autofocus: true,
          placeholder: t('auth.email'),
          class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('auth.password'), class: "form-label" %>
      <%= form.password_field :password, 
          required: true,
          placeholder: t('auth.password'),
          class: "form-input" %>
    </div>

    <div class="pt-4">
      <%= form.submit t('auth.sign_in'), class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="text-center mt-6 pt-6 border-t border-gray-200">
    <p class="text-sm text-gray-600">
      <%= t('auth.dont_have_account') %>
      <%= link_to t('auth.sign_up'), signup_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </p>
  </div>
</div>
