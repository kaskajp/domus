<div class="bg-gray-50 rounded-lg border border-gray-200 p-3 hover:bg-gray-100 transition-colors duration-150 group">
  <div class="flex items-start justify-between">
    <!-- Completion Checkbox -->
    <div class="flex items-start space-x-2 flex-1 min-w-0">
      <div class="flex-shrink-0">
        <% if task.completed? %>
          <%= link_to incomplete_task_path(task), 
              data: { "turbo-method": :patch }, 
              class: "text-green-600 hover:text-green-800", 
              title: "Mark incomplete" do %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          <% end %>
        <% else %>
          <%= link_to complete_task_path(task), 
              data: { "turbo-method": :patch }, 
              class: "text-gray-400 hover:text-green-600", 
              title: "Mark complete" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          <% end %>
        <% end %>
      </div>
      
      <div class="flex-1 min-w-0">
        <!-- Task Title -->
        <h4 class="text-sm font-medium text-gray-900 mb-1 #{'line-through text-gray-500' if task.completed?}">
          <%= link_to task.title, task_path(task), 
              class: "hover:text-blue-600 #{task.completed? ? 'text-gray-500' : 'text-gray-900'}" %>
        </h4>
        
        <!-- Task Meta Info -->
        <div class="flex items-center space-x-2 text-xs text-gray-500">
          <!-- Priority -->
          <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium <%= task.priority_color %>">
            <%= task.priority[0].upcase %>
          </span>
          
          <!-- Time -->
          <% if task.due_time.present? %>
            <span class="flex items-center">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= task.due_time.strftime("%I:%M %p") %>
            </span>
          <% end %>
          
          <!-- Assignee -->
          <% if task.assignee.present? %>
            <span class="flex items-center" title="Assigned to <%= task.assignee.full_name %>">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= task.assignee.first_name %>
            </span>
          <% end %>
          
          <!-- Recurring indicator -->
          <% if task.recurring? %>
            <span class="flex items-center text-blue-600" title="Recurring task">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
            </span>
          <% end %>
        </div>
        
        <!-- Tags (show max 2) -->
        <% if task.tags_array.any? %>
          <div class="flex flex-wrap gap-1 mt-1">
            <% task.tags_array.first(2).each do |tag| %>
              <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                <%= tag %>
              </span>
            <% end %>
            <% if task.tags_array.size > 2 %>
              <span class="text-xs text-gray-400">+<%= task.tags_array.size - 2 %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Action Menu (hidden by default, shown on hover) -->
    <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-150">
      <div class="flex items-center space-x-1">
        <%= link_to edit_task_path(task), 
            class: "text-gray-400 hover:text-green-600 p-1", 
            title: "Edit task" do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        
                 <% if task.created_by == current_user || current_user.admin? %>
           <%= link_to task_path(task), 
               data: { "turbo-method": :delete, confirm: "Are you sure?" }, 
               class: "text-gray-400 hover:text-red-600 p-1", 
               title: "Delete task" do %>
             <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
             </svg>
           <% end %>
         <% end %>
      </div>
    </div>
  </div>
</div> 