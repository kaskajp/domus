<% content_for :title, "Tasks & Chores - Domus" %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900">Tasks & Chores</h1>
      <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
    </div>
    
    <!-- Statistics Cards -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow p-4">
        <div class="text-2xl font-bold text-gray-900"><%= @stats[:total] %></div>
        <div class="text-sm text-gray-600">Total Tasks</div>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <div class="text-2xl font-bold text-blue-600"><%= @stats[:incomplete] %></div>
        <div class="text-sm text-gray-600">Incomplete</div>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <div class="text-2xl font-bold text-green-600"><%= @stats[:completed] %></div>
        <div class="text-sm text-gray-600">Completed</div>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <div class="text-2xl font-bold text-red-600"><%= @stats[:overdue] %></div>
        <div class="text-sm text-gray-600">Overdue</div>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <div class="text-2xl font-bold text-orange-600"><%= @stats[:due_today] %></div>
        <div class="text-sm text-gray-600">Due Today</div>
      </div>
    </div>
  </div>

  <!-- Filters and Sort -->
  <div class="bg-white rounded-lg shadow mb-6">
    <div class="p-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Filter & Sort</h3>
    </div>
    <div class="p-4">
      <%= form_with url: tasks_path, method: :get, local: true, class: "space-y-4" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- Status Filter -->
          <div>
            <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :status, 
                options_for_select([
                  ['All Incomplete', 'incomplete'],
                  ['Completed', 'completed'],
                  ['Overdue', 'overdue'],
                  ['Due Today', 'due_today']
                ], params[:status]),
                { include_blank: false },
                { class: "form-input" } %>
          </div>
          
          <!-- Priority Filter -->
          <div>
            <%= form.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :priority, 
                options_for_select([
                  ['Urgent', 'urgent'],
                  ['High', 'high'],
                  ['Medium', 'medium'],
                  ['Low', 'low']
                ], params[:priority]),
                { include_blank: "All Priorities" },
                { class: "form-input" } %>
          </div>
          
          <!-- Assignee Filter -->
          <div>
            <%= form.label :assignee_id, "Assignee", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :assignee_id, 
                options_from_collection_for_select(@users, :id, :full_name, params[:assignee_id]),
                { include_blank: "All Users" },
                { class: "form-input" } %>
          </div>
          
          <!-- Sort -->
          <div>
            <%= form.label :sort, "Sort By", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.select :sort, 
                options_for_select([
                  ['Recent', 'recent'],
                  ['Priority', 'priority'],
                  ['Due Date', 'due_date']
                ], params[:sort]),
                { include_blank: false },
                { class: "form-input" } %>
          </div>
        </div>
        
        <div class="flex space-x-3">
          <%= form.submit "Apply Filters", class: "btn btn-primary" %>
          <%= link_to "Clear Filters", tasks_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Tasks List -->
  <div class="space-y-4">
    <% if @tasks.any? %>
      <% @tasks.each do |task| %>
        <div class="bg-white rounded-lg shadow hover:shadow-md transition-shadow duration-200">
          <div class="p-6">
            <div class="flex items-start justify-between">
              <div class="flex items-start space-x-4 flex-1">
                <!-- Completion Checkbox -->
                <div class="flex items-center">
                  <% if task.completed? %>
                    <%= link_to incomplete_task_path(task), method: :patch, 
                        class: "text-green-600 hover:text-green-800", 
                        title: "Mark as incomplete" do %>
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                    <% end %>
                  <% else %>
                    <%= link_to complete_task_path(task), method: :patch, 
                        class: "text-gray-400 hover:text-green-600", 
                        title: "Mark as complete" do %>
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
                
                <div class="flex-1 min-w-0">
                  <!-- Task Title -->
                  <h3 class="text-lg font-medium text-gray-900 mb-1">
                    <%= link_to task.title, task_path(task), 
                        class: "hover:text-blue-600 #{task.completed? ? 'line-through text-gray-500' : ''}" %>
                  </h3>
                  
                  <!-- Task Description -->
                  <% if task.description.present? %>
                    <p class="text-gray-600 mb-2 line-clamp-2"><%= truncate(task.description, length: 150) %></p>
                  <% end %>
                  
                  <!-- Task Metadata -->
                  <div class="flex flex-wrap items-center gap-3 text-sm text-gray-500">
                    <!-- Priority -->
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= task.priority_color %>">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= task.priority_icon %>"></path>
                      </svg>
                      <%= task.priority.capitalize %>
                    </span>
                    
                    <!-- Due Date -->
                    <% if task.due_date.present? %>
                      <span class="flex items-center <%= task.overdue? ? 'text-red-600' : '' %>">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <%= task.due_date.strftime("%b %d, %Y") %>
                        <% if task.due_time.present? %>
                          at <%= task.due_time.strftime("%I:%M %p") %>
                        <% end %>
                      </span>
                    <% end %>
                    
                    <!-- Recurring -->
                    <% if task.recurring? %>
                      <span class="flex items-center text-blue-600">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        <%= task.recurrence_type.capitalize %>
                      </span>
                    <% end %>
                    
                    <!-- Assignee -->
                    <% if task.assignee.present? %>
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <%= task.assignee.full_name %>
                      </span>
                    <% end %>
                    
                    <!-- Created By -->
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                      </svg>
                      Created by <%= task.created_by.full_name %>
                    </span>
                  </div>
                  
                  <!-- Tags -->
                  <% if task.tags_array.any? %>
                    <div class="flex flex-wrap gap-1 mt-2">
                      <% task.tags_array.each do |tag| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                          <%= tag %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex items-center space-x-2 ml-4">
                <%= link_to task_path(task), class: "text-gray-400 hover:text-blue-600", title: "View" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
                
                <% if task.created_by == current_user || current_user.admin? %>
                  <%= link_to edit_task_path(task), class: "text-gray-400 hover:text-green-600", title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  
                  <%= link_to task_path(task), method: :delete, 
                      class: "text-gray-400 hover:text-red-600", 
                      title: "Delete",
                      data: { confirm: "Are you sure you want to delete this task?" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No tasks found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new task or adjusting your filters.</p>
        <div class="mt-6">
          <%= link_to "Create New Task", new_task_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 